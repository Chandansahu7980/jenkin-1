pipeline {
    agent any
    stages {
        stage('Clone Code') {
            steps {
                echo "Dev Cloning repository..."
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Dev Running build step..."
                sh 'chmod +x app.sh'
                sh './app.sh'
            }
        }

        stage('Test') {
            steps {
                echo "Dev Running tests..."
                sh 'echo "Dev All tests passed!"'
            }
        }

        stage('Deploy') {
            steps {
                echo "Dev Simulated deployment"
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
